<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <stroke android:width="3dp" android:color="?attr/colorOnPrimary"/>
            <corners android:radius="3dp"/>
            <solid android:width="3dp" android:color="#FFD600"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <stroke android:width="7dp" android:color="?attr/colorOnPrimary"/>
            <corners android:radius="10dp"/>
            <solid android:width="3dp" android:color="#FFFFD600"/>
        </shape>
    </item>
</selector>


